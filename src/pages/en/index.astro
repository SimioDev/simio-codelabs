---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { ServicesSection } from '@/components/sections/ServicesSection';
import { MorphingBlob } from '@/components/ui/MorphingBlob';
import { CustomCursor } from '@/components/ui/CustomCursor';
import { useTranslations } from '@/i18n';
import { Settings, ShoppingCart, Database, Rocket } from 'lucide-react';

const t = useTranslations('en');

const title = 'Custom Software Development | Luxury Software';
const description = 'Custom software development. Process automation, e-commerce, management systems, and landing pages. +5 years of experience, +20 completed projects with measurable results.';

const portfolioItems = await getCollection('portfolio', ({ data }) => {
  return data.lang === 'en';
});

const projectItems = await getCollection('projects', ({ data }) => {
  return data.lang === 'en' && data.featured;
});

const featuredProjects = portfolioItems.slice(0, 3);

const featuredProjectsList = projectItems
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 4);

const services = [
  {
    icon: Settings,
    title: 'Smart Automation',
    description: 'Eliminate repetitive tasks and free up your team\'s time for high-value strategic activities.',
    technologies: ['Python', 'Node.js', 'APIs'],
  },
  {
    icon: ShoppingCart,
    title: 'Online Stores',
    description: 'E-commerce optimized for maximum conversion. From simple catalogs to complex platforms with inventory, payments and shipping.',
  },
  {
    icon: Database,
    title: 'Management Software',
    description: 'ERPs and CRMs adapted to your workflow. Manage customers, inventory, sales and finances in one place.',
  },
  {
    icon: Rocket,
    title: 'High-Conversion Landing Pages',
    description: 'Pages specifically designed to convert visitors into customers. Persuasive design and integrated analytics.',
    metrics: {
      before: 'Before',
      beforeValue: '1.5% conversion',
      after: 'After',
      afterValue: '4.5% conversion',
    },
  },
];
---

<BaseLayout title={title} description={description} lang="en">
  <CustomCursor client:media="(min-width: 1024px)" />

  <div class="min-h-screen bg-background gradient-mesh">
    <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 py-16 sm:py-20 overflow-hidden">
      <MorphingBlob client:visible className="hidden lg:block top-0 left-0 opacity-20" color="#A78BFA" size={500} />

      <div class="relative z-10 mx-auto max-w-7xl w-full">
        <div class="space-y-12 max-w-3xl">
          <div class="inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-sm font-medium text-primary backdrop-blur-sm animate-clip-reveal">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
            </span>
            Available for new projects
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-black tracking-tighter leading-[1.1]">
            <span class="block text-foreground">Luxury Software</span>
            <span class="block bg-gradient-to-r from-[#c09431] via-[#d4a950] to-[#c09431] bg-clip-text text-transparent">
              Development
            </span>
            <span class="block text-foreground">Exclusive & Premium</span>
          </h1>

          <p class="max-w-2xl text-xl md:text-2xl text-muted-foreground leading-relaxed">
            Elite technology solutions. Exclusive design, impeccable code, and <span class="text-primary font-semibold">extraordinary</span> results.
          </p>

          <div class="flex flex-col sm:flex-row items-start gap-4">
            <a
              href="#contact"
              class="group relative inline-flex items-center justify-center gap-2 rounded-full bg-primary px-8 py-4 text-lg font-semibold text-primary-foreground transition-all hover:scale-105 hover:shadow-2xl hover:shadow-primary/50"
              title="Schedule free 30-minute consultation"
            >
              Let's talk (it's free)
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href="/en/portfolio/"
              class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-border bg-background px-8 py-4 text-lg font-semibold transition-all hover:border-primary hover:bg-muted"
              title="See success stories and completed projects"
            >
              See what I've done
            </a>
          </div>

          <div class="grid grid-cols-3 gap-8 max-w-2xl pt-8">
            {[
              { value: '5+', label: 'Years' },
              { value: '20+', label: 'Projects' },
              { value: '90%', label: 'Efficiency' }
            ].map((stat) => (
              <div class="text-center">
                <div class="text-4xl md:text-5xl font-black text-primary">{stat.value}</div>
                <div class="text-sm text-muted-foreground mt-2">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="relative px-6 py-32 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 md:mb-16">
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black tracking-tighter mb-4 md:mb-6">
            Services
          </h2>
          <p class="text-lg md:text-xl text-muted-foreground max-w-2xl">
            Solutions designed to grow your business
          </p>
        </div>

        <ServicesSection client:visible services={services} />

        <div class="mt-12 text-center">
          <a
            href="/en/services/"
            class="inline-flex items-center gap-2 text-lg font-semibold text-primary hover:text-primary/80 transition-colors group"
            title="Learn about all custom software development services"
          >
            View all services
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    {featuredProjects.length > 0 && (
      <section class="relative px-6 py-32 lg:px-8 bg-muted/30">
        <div class="mx-auto max-w-7xl">
          <div class="mb-12 md:mb-16">
            <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black tracking-tighter mb-4 md:mb-6">
              Success Stories
            </h2>
            <p class="text-lg md:text-xl text-muted-foreground max-w-2xl">
              Real results from completed projects
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            {featuredProjects.slice(0, 2).map((project) => (
              <a
                href={`/en/portfolio/${project.slug.replace(/^(es|en)\//, '')}/`}
                class="group relative rounded-2xl border border-border bg-card overflow-hidden transition-all hover:border-primary/50 hover:shadow-lg"
                title={`View success story: ${project.data.title}`}
              >
                <div class="aspect-[16/9] overflow-hidden bg-muted relative">
                  {project.data.image ? (
                    <img
                      src={project.data.image}
                      alt={project.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                      decoding="async"
                      width="800"
                      height="450"
                    />
                  ) : (
                    <div class="w-full h-full bg-gradient-to-br from-primary/20 to-purple-500/20"></div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-card/90 via-card/20 to-transparent"></div>
                </div>
                <div class="p-5">
                  <h3 class="text-lg font-semibold mb-2 group-hover:text-primary transition-colors">
                    {project.data.title}
                  </h3>
                  <p class="text-muted-foreground text-sm mb-3 leading-relaxed line-clamp-2">
                    {project.data.description}
                  </p>
                  {project.data.technologies && (
                    <div class="flex flex-wrap gap-1.5 mb-3">
                      {project.data.technologies.slice(0, 3).map((tech) => (
                        <span class="inline-flex items-center rounded-md bg-primary/10 px-2 py-0.5 text-xs font-medium text-primary">
                          {tech}
                        </span>
                      ))}
                    </div>
                  )}
                  {project.data.metrics && (
                    <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1.5 text-xs font-semibold text-primary">
                      <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      {project.data.metrics.improvement}
                    </div>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    {featuredProjectsList.length > 0 && (
      <section id="projects" class="relative px-6 py-32 lg:px-8">
        <div class="mx-auto max-w-7xl">
          <div class="mb-12 md:mb-16">
            <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black tracking-tighter mb-4 md:mb-6">
              Featured Projects
            </h2>
            <p class="text-lg md:text-xl text-muted-foreground max-w-2xl">
              Innovative custom solutions built with a focus on results
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            {featuredProjectsList.map((project) => (
              <a
                href={`/en/projects/${project.slug.replace(/^(es|en)\//, '')}/`}
                class="group relative rounded-2xl border border-border bg-card overflow-hidden transition-all hover:border-primary/50 hover:shadow-lg"
                title={`View project: ${project.data.title}`}
              >
                <div class="aspect-[16/9] overflow-hidden bg-muted relative">
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                    width="800"
                    height="450"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-card/90 via-card/20 to-transparent"></div>
                </div>
                <div class="p-5">
                  <h3 class="text-lg font-semibold mb-2 group-hover:text-primary transition-colors">
                    {project.data.title}
                  </h3>
                  <p class="text-muted-foreground text-sm mb-3 leading-relaxed line-clamp-2">
                    {project.data.description}
                  </p>
                  <div class="flex flex-wrap gap-1.5">
                    {project.data.technologies.slice(0, 3).map((tech) => (
                      <span class="inline-flex items-center rounded-md bg-primary/10 px-2 py-0.5 text-xs font-medium text-primary">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <section id="contact" class="relative px-4 sm:px-6 py-16 md:py-32 lg:px-8">
      <div class="mx-auto max-w-4xl">
        <div class="relative rounded-2xl md:rounded-3xl border-2 border-primary/20 bg-card p-6 sm:p-8 md:p-12 text-center overflow-hidden">
          <MorphingBlob client:visible className="hidden sm:block top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-20" color="#818CF8" size={400} />

          <div class="relative z-10">
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black tracking-tighter mb-4 md:mb-6">
              {t.home.cta.title}
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-muted-foreground mb-6 sm:mb-8 md:mb-10 max-w-2xl mx-auto">
              {t.home.cta.description}
            </p>
            <a
              href="mailto:nestcdev@gmail.com"
              class="inline-flex items-center justify-center gap-2 sm:gap-3 rounded-full bg-primary px-5 sm:px-6 md:px-8 py-3 sm:py-3.5 md:py-4 text-sm sm:text-base md:text-lg font-semibold text-primary-foreground shadow-2xl transition-all hover:scale-105 hover:shadow-primary/50 w-full sm:w-auto max-w-full"
              title="Send email to schedule free consultation"
            >
              <svg class="w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="truncate">nestcdev@gmail.com</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
