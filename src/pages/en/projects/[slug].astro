---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projectItems = await getCollection('projects', ({ data }) => {
    return data.lang === 'en';
  });

  return projectItems.map((item) => {
    const cleanSlug = item.slug.replace(/^(es|en)\//, '');
    return {
      params: { slug: cleanSlug },
      props: { item },
    };
  });
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<BaseLayout
  title={`${item.data.title} - Luxury Software`}
  description={item.data.description}
  image={item.data.image}
  lang="en"
>
  <article class="min-h-screen bg-background">
    <div class="mx-auto max-w-7xl px-6 py-16">
      <header class="mb-12">
        <a
          href="/en/#projects"
          class="inline-flex items-center text-sm font-semibold text-primary hover:text-primary/80 mb-6"
        >
          ‚Üê Back to Projects
        </a>
        <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-4">
          {item.data.title}
        </h1>
        <p class="text-xl text-muted-foreground mb-8">
          {item.data.description}
        </p>

        <div class="mb-6">
          <span class="text-muted-foreground">Focus:</span>
          <p class="mt-2 text-lg font-medium text-foreground">{item.data.focus}</p>
        </div>

        <div class="mt-6 flex flex-wrap gap-2">
          {item.data.technologies.map((tech) => (
            <span class="inline-flex items-center rounded-md bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
              {tech}
            </span>
          ))}
        </div>
      </header>

      <div class="mb-12 rounded-lg overflow-hidden bg-muted aspect-video">
        <img
          src={item.data.image}
          alt={item.data.title}
          class="w-full h-full object-cover"
        />
      </div>

      <div class="prose prose-lg max-w-none mb-12">
        <Content />
      </div>

      {item.data.url && (
        <div class="mb-12">
          <a
            href={item.data.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-primary hover:text-primary/80 font-semibold"
          >
            View live project
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      )}

      <div class="rounded-lg bg-muted p-8 text-center">
        <h3 class="text-2xl font-bold text-foreground mb-4">
          Interested in a similar project?
        </h3>
        <p class="text-muted-foreground mb-6">
          Schedule a free consultation and discover how we can create something exclusive for you.
        </p>
        <a
          href="/en/#contact"
          class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90"
        >
          Schedule Free Consultation
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    color: hsl(var(--foreground));
  }

  .prose h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: hsl(var(--primary));
  }
</style>
