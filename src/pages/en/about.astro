---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { MorphingBlob } from '@/components/ui/MorphingBlob';
import { CustomCursor } from '@/components/ui/CustomCursor';
import { useTranslations } from '@/i18n';

const t = useTranslations('en');

const title = 'About Me - Nestor Cabrera | Luxury Software';
const description = 'Freelance developer specialized in creating custom software that solves real business problems.';

const experience = [
  { year: '2019', event: 'First freelance project' },
  { year: '2020', event: 'Automation specialization' },
  { year: '2022', event: 'Founded Luxury Software' },
  { year: '2024', event: '+20 completed projects' }
];

const skills = [
  {
    name: 'Frontend Development',
    level: 95,
    tools: ['React', 'Next.js', 'Astro', 'TypeScript', 'Tailwind']
  },
  {
    name: 'Backend & APIs',
    level: 90,
    tools: ['Node.js', 'Python', 'PostgreSQL', 'MongoDB', 'REST']
  },
  {
    name: 'DevOps & Cloud',
    level: 80,
    tools: ['Docker', 'Vercel', 'AWS', 'Git', 'CI/CD']
  },
  {
    name: 'E-commerce',
    level: 85,
    tools: ['Shopify', 'WooCommerce', 'Stripe', 'Payments']
  },
  {
    name: 'Automation',
    level: 92,
    tools: ['Zapier', 'n8n', 'Python Scripts', 'APIs']
  },
  {
    name: 'Design Tools',
    level: 75,
    tools: ['Figma', 'GSAP', 'Framer Motion', 'Three.js']
  }
];

const approach = [
  {
    number: '01',
    title: 'Diagnosis',
    description: 'We analyze your current operation. I identify bottlenecks, manual processes, and automation opportunities.'
  },
  {
    number: '02',
    title: 'Proposal',
    description: 'I design a specific solution for your problem. Tech stack, architecture, timeline, and fixed budget.'
  },
  {
    number: '03',
    title: 'MVP in 2-4 Weeks',
    description: 'I deliver a functional version quickly. We validate with real users, collect feedback, iterate.'
  },
  {
    number: '04',
    title: 'Scale',
    description: 'We add features by priority. Documented code, automated tests, continuous deployment.'
  }
];
---

<BaseLayout title={title} description={description} lang="en">
  <CustomCursor client:load />

  <div class="min-h-screen bg-background">
    <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 py-20 overflow-hidden gradient-mesh">
      <MorphingBlob client:load className="hidden lg:block top-1/4 right-0 opacity-20" color="#818CF8" size={700} />
      <MorphingBlob client:load className="hidden lg:block bottom-1/4 left-0 opacity-15" color="#A78BFA" size={600} />

      <div class="relative z-10 mx-auto max-w-7xl w-full">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div class="space-y-8">
            <div class="inline-flex items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-4 py-2 text-sm font-medium text-primary backdrop-blur-sm">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
              </span>
              Available for projects
            </div>

            <div>
              <h1 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-black tracking-tighter leading-[0.9] mb-6">
                <span class="block text-foreground">Nestor</span>
                <span class="block bg-gradient-to-r from-primary via-purple-500 to-primary bg-clip-text text-transparent">
                  Cabrera
                </span>
              </h1>
              <div class="space-y-2 text-xl md:text-2xl text-muted-foreground font-medium">
                <p>Freelance Developer</p>
                <p class="text-foreground">Custom Software</p>
              </div>
            </div>

            <p class="text-lg md:text-xl text-muted-foreground leading-relaxed max-w-xl">
              I transform ideas into digital products. No templates.
              Every line of code is designed for <span class="text-foreground font-semibold">your specific problem</span>.
            </p>

            <div class="flex flex-wrap items-center gap-3">
              <a
                href="mailto:nestcdev@gmail.com"
                class="inline-flex items-center gap-2 rounded-full bg-primary px-6 py-3 text-sm font-semibold text-primary-foreground transition-all hover:scale-105 hover:shadow-lg hover:shadow-primary/50"
              >
                Schedule Call
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>

              <a
                href="https://github.com/SimioDev"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 rounded-full border border-border bg-card/50 backdrop-blur-sm px-5 py-3 text-sm font-medium hover:border-primary hover:bg-card transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                GitHub
              </a>

              <a
                href="https://www.linkedin.com/in/nestor-cabrera"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 rounded-full border border-border bg-card/50 backdrop-blur-sm px-5 py-3 text-sm font-medium hover:border-primary hover:bg-card transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>

          <div class="relative">
            <div class="aspect-square rounded-3xl bg-gradient-to-br from-primary/20 via-purple-500/20 to-primary/10 backdrop-blur-sm border border-border p-8 md:p-12">
              <div class="h-full flex flex-col justify-between">
                <div class="space-y-6">
                  <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-4 py-2 text-xs font-bold text-primary uppercase tracking-wider">
                    Experience
                  </div>

                  <div class="space-y-4">
                    {experience.map((item, index) => (
                      <div class="flex items-start gap-4 group">
                        <div class="flex-shrink-0">
                          <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary font-black text-sm group-hover:bg-primary group-hover:text-primary-foreground transition-all">
                            {item.year.slice(-2)}
                          </div>
                        </div>
                        <div class="flex-1 pt-2">
                          <div class="text-xs text-muted-foreground font-semibold mb-1">{item.year}</div>
                          <div class="text-sm md:text-base font-medium text-foreground">{item.event}</div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                <div class="grid grid-cols-3 gap-4 pt-8 border-t border-border">
                  <div>
                    <div class="text-3xl font-black text-primary">5+</div>
                    <div class="text-xs text-muted-foreground mt-1">Years</div>
                  </div>
                  <div>
                    <div class="text-3xl font-black text-primary">20+</div>
                    <div class="text-xs text-muted-foreground mt-1">Projects</div>
                  </div>
                  <div>
                    <div class="text-3xl font-black text-primary">90%</div>
                    <div class="text-xs text-muted-foreground mt-1">Efficiency</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="relative px-4 sm:px-6 py-24 md:py-32 lg:px-8 bg-muted/30">
      <div class="mx-auto max-w-7xl">
        <div class="mb-16 md:mb-20">
          <div class="inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-xs font-bold text-primary uppercase tracking-wider mb-6">
            Skills
          </div>
          <h2 class="text-5xl sm:text-6xl md:text-7xl font-black tracking-tighter">
            Tech <span class="text-primary">Stack</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {skills.map((skill) => (
            <div class="group relative rounded-2xl border border-border bg-card p-6 md:p-8 hover:border-primary/50 transition-all">
              <div class="flex items-start justify-between mb-6">
                <div class="flex-1">
                  <h3 class="text-xl md:text-2xl font-black text-foreground mb-2">{skill.name}</h3>
                  <div class="flex flex-wrap gap-2 mb-4">
                    {skill.tools.slice(0, 3).map((tool) => (
                      <span class="text-xs font-medium text-muted-foreground">{tool}</span>
                    ))}
                    {skill.tools.length > 3 && (
                      <span class="text-xs font-medium text-muted-foreground">+{skill.tools.length - 3}</span>
                    )}
                  </div>
                </div>
                <div class="flex-shrink-0 w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
                  <span class="text-xl font-black text-primary">{skill.level}%</span>
                </div>
              </div>

              <div class="relative h-2 bg-muted rounded-full overflow-hidden">
                <div
                  class="absolute inset-y-0 left-0 bg-gradient-to-r from-primary to-purple-500 rounded-full transition-all duration-1000 group-hover:from-purple-500 group-hover:to-primary"
                  style={`width: ${skill.level}%`}
                ></div>
              </div>

              <div class="mt-4 flex flex-wrap gap-1.5">
                {skill.tools.map((tool) => (
                  <span class="inline-flex items-center rounded-md bg-primary/10 px-2.5 py-1 text-xs font-medium text-primary">
                    {tool}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="relative px-4 sm:px-6 py-24 md:py-32 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-16 md:mb-20">
          <div class="inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-xs font-bold text-primary uppercase tracking-wider mb-6">
            Process
          </div>
          <h2 class="text-5xl sm:text-6xl md:text-7xl font-black tracking-tighter mb-6">
            How I <span class="text-primary">Work</span>
          </h2>
          <p class="text-lg md:text-xl text-muted-foreground max-w-2xl">
            Proven methodology in +20 projects. Focused on delivering value fast and scaling in an organized way.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {approach.map((step, index) => (
            <div class={`group relative rounded-3xl border border-border bg-card p-8 md:p-10 hover:border-primary/50 transition-all ${index === 0 || index === 3 ? 'md:col-span-1' : ''}`}>
              <div class="absolute top-8 right-8 text-8xl font-black text-primary/5 group-hover:text-primary/10 transition-all">
                {step.number}
              </div>

              <div class="relative z-10">
                <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary font-black text-lg mb-6 group-hover:bg-primary group-hover:text-primary-foreground transition-all">
                  {step.number}
                </div>

                <h3 class="text-2xl md:text-3xl font-black text-foreground mb-4">
                  {step.title}
                </h3>

                <p class="text-muted-foreground leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="relative px-4 sm:px-6 py-24 md:py-32 lg:px-8 bg-muted/30">
      <div class="mx-auto max-w-5xl text-center">
        <MorphingBlob client:load className="hidden lg:block top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-10" color="#818CF8" size={600} />

        <div class="relative z-10">
          <h2 class="text-5xl sm:text-6xl md:text-7xl font-black tracking-tighter mb-6">
            Let's talk about your <span class="text-primary">project</span>?
          </h2>

          <p class="text-lg md:text-xl text-muted-foreground mb-10 max-w-2xl mx-auto">
            Schedule a 30-minute call. No commitment. We analyze your problem and I give you an honest proposal.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="mailto:nestcdev@gmail.com"
              class="inline-flex items-center justify-center gap-3 rounded-full bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-2xl transition-all hover:scale-105 hover:shadow-primary/50 w-full sm:w-auto"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              nestcdev@gmail.com
            </a>

            <a
              href="/en/portfolio/"
              class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-border bg-background px-8 py-4 text-base font-semibold transition-all hover:border-primary hover:bg-muted w-full sm:w-auto"
            >
              View Success Cases
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
