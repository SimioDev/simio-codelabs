---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { MorphingBlob } from '@/components/ui/MorphingBlob';
import { CustomCursor } from '@/components/ui/CustomCursor';

const title = 'Blog de Desarrollo de Software | Tutoriales, Automatizaci√≥n y Mejores Pr√°cticas';
const description = 'Art√≠culos sobre desarrollo de software, automatizaci√≥n de negocios, tecnolog√≠a para PYMEs y mejores pr√°cticas en programaci√≥n. Gu√≠as pr√°cticas y casos de uso reales.';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'es' && !data.draft;
});

const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout title={title} description={description} lang="es">
  <CustomCursor client:load />

  <div class="min-h-screen bg-background gradient-mesh">
    <section class="relative min-h-[50vh] flex items-center justify-center px-4 sm:px-6 py-20 overflow-hidden">
      <MorphingBlob client:load className="hidden sm:block top-0 right-1/3 opacity-20" color="#818CF8" size={450} />

      <div class="relative z-10 mx-auto max-w-4xl text-center">
        <div class="inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-sm font-medium text-primary backdrop-blur-sm mb-8">
          ‚úçÔ∏è {sortedPosts.length} art√≠culos publicados
        </div>

        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-[1.1] mb-6">
          <span class="block bg-gradient-to-r from-primary via-purple-500 to-primary bg-clip-text text-transparent">
            Blog
          </span>
        </h1>

        <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          {description}
        </p>
      </div>
    </section>

    <section class="relative px-4 sm:px-6 py-12 md:py-16 lg:px-8">
      <div class="mx-auto max-w-7xl">
        {sortedPosts.length === 0 ? (
          <div class="text-center py-20">
            <div class="text-6xl mb-4">üìù</div>
            <p class="text-xl text-muted-foreground">No hay art√≠culos publicados a√∫n.</p>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedPosts.map((post, index) => (
              <a
                href={`/blog/${post.slug.replace(/^(es|en)\//, '')}/`}
                class="group relative rounded-3xl border border-border bg-card overflow-hidden transition-all hover:border-primary/50 hover:scale-[1.02] hover:shadow-2xl duration-300"
                style={`animation-delay: ${index * 0.05}s`}
              >
                {/* Featured image or gradient */}
                {post.data.image ? (
                  <div class="aspect-video overflow-hidden bg-muted relative">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-card via-transparent to-transparent opacity-60"></div>
                  </div>
                ) : (
                  <div class="aspect-video bg-gradient-to-br from-primary/20 to-purple-500/20 group-hover:from-primary/30 group-hover:to-purple-500/30 transition-all duration-500"></div>
                )}

                <div class="p-6">
                  {/* Tags */}
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="inline-flex items-center rounded-lg bg-primary/10 px-2.5 py-1 text-xs font-medium text-primary">
                        {tag}
                      </span>
                    ))}
                  </div>

                  {/* Title */}
                  <h2 class="text-xl font-black text-foreground group-hover:text-primary transition-colors line-clamp-2 mb-3">
                    {post.data.title}
                  </h2>

                  {/* Description */}
                  <p class="text-sm text-muted-foreground line-clamp-3 mb-4">
                    {post.data.description}
                  </p>

                  {/* Meta info */}
                  <div class="flex items-center gap-2 text-xs text-muted-foreground pt-4 border-t border-border">
                    <span class="font-medium">{post.data.author}</span>
                    <span>‚Ä¢</span>
                    <time datetime={post.data.publishDate.toISOString()}>
                      {new Date(post.data.publishDate).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  </div>

                  {/* Read more indicator */}
                  <div class="flex items-center gap-2 text-sm font-semibold text-primary opacity-0 group-hover:opacity-100 transform translate-y-2 group-hover:translate-y-0 transition-all duration-300 mt-4">
                    Leer art√≠culo
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}
      </div>
    </section>

    <section class="relative px-4 sm:px-6 py-16 md:py-24 lg:px-8">
      <div class="mx-auto max-w-4xl">
        <div class="relative rounded-2xl md:rounded-3xl border-2 border-primary/20 bg-card p-6 sm:p-8 md:p-12 text-center overflow-hidden">
          <MorphingBlob client:load className="hidden sm:block top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-15" color="#A78BFA" size={400} />

          <div class="relative z-10">
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black tracking-tighter mb-4 md:mb-6">
              ¬øTienes un <span class="text-primary">proyecto</span> en mente?
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-muted-foreground mb-6 sm:mb-8 md:mb-10 max-w-2xl mx-auto">
              Hablemos sobre c√≥mo puedo ayudarte a transformar tu negocio con software a medida.
            </p>
            <a
              href="mailto:nestor@simiocodelabs.com"
              class="inline-flex items-center justify-center gap-2 sm:gap-3 rounded-full bg-primary px-5 sm:px-6 md:px-8 py-3 sm:py-3.5 md:py-4 text-sm sm:text-base md:text-lg font-semibold text-primary-foreground shadow-2xl transition-all hover:scale-105 w-full sm:w-auto max-w-full"
            >
              <svg class="w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="truncate">nestor@simiocodelabs.com</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* Fade in animation for blog posts */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  a[href^="/blog/"] {
    animation: fadeInUp 0.5s ease-out backwards;
  }
</style>
